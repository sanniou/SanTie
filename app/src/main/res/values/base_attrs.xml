<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--TitleView-->
  <declare-styleable name="TitleView">
    <attr format="dimension" name="viewPadding"/>
    <attr format="dimension" name="clickArea"/>
    <attr format="reference" name="leftId"/>
    <attr format="reference" name="leftImage"/>
    <attr format="string" name="leftText"/>
    <attr format="color" name="leftColor"/>
    <attr format="dimension" name="leftSize"/>
    <attr format="dimension" name="leftWidth"/>
    <attr format="dimension" name="leftHeight"/>
    <attr format="string" name="leftOnClick"/>
    <attr format="boolean" name="showLeft"/>
    <attr format="string" name="titleText"/>
    <attr format="color" name="titleDividerColor"/>
    <attr format="dimension" name="titleDividerHeight"/>
    <attr format="color" name="titleColor"/>
    <attr format="dimension" name="titleSize"/>
    <attr format="reference" name="rightId"/>
    <attr format="reference" name="rightImage"/>
    <attr format="string" name="rightText"/>
    <attr format="color" name="rightColor"/>
    <attr format="dimension" name="rightSize"/>
    <attr format="dimension" name="rightWidth"/>
    <attr format="dimension" name="rightHeight"/>
    <attr format="string" name="rightOnClick"/>
    <attr format="boolean" name="showRight"/>
  </declare-styleable>

  <declare-styleable name="RoundButton">
    <attr format="color" name="backgroundColor"/>
    <attr format="color" name="borderColor"/>
    <attr format="dimension" name="borderWidth"/>
    <attr format="boolean" name="isRadiusAdjustBounds"/>
    <attr format="dimension" name="radius"/>
    <attr format="dimension" name="radiusTopLeft"/>
    <attr format="dimension" name="radiusTopRight"/>
    <attr format="dimension" name="radiusBottomLeft"/>
    <attr format="dimension" name="radiusBottomRight"/>
  </declare-styleable>


  <declare-styleable name="NineGridView">
    <attr format="dimension" name="ngv_singleImageSize"/>
    <attr format="float" name="ngv_singleImageRatio"/>
    <attr format="dimension" name="ngv_gridSpacing"/>
    <attr format="integer" name="ngv_maxSize"/>
    <attr format="enum" name="ngv_mode">
      <enum name="fill" value="0"/>
      <enum name="grid" value="1"/>
    </attr>
  </declare-styleable>


  <declare-styleable name="Themes">
    <attr format="reference" name="numberProgressBarStyle"/>
  </declare-styleable>

  <declare-styleable name="BannerItemView">
    <attr format="reference" name="bannerRes"/>
    <attr format="boolean" name="bannerInfinite"/>
    <attr format="boolean" name="bannerAutoScroll"/>
    <attr format="float" name="millisecondsPerInch"/>
  </declare-styleable>
  <declare-styleable name="RoundedImageView">
    <attr format="dimension" name="riv_corner_radius"/>
    <attr format="dimension" name="riv_corner_radius_top_left"/>
    <attr format="dimension" name="riv_corner_radius_top_right"/>
    <attr format="dimension" name="riv_corner_radius_bottom_left"/>
    <attr format="dimension" name="riv_corner_radius_bottom_right"/>
    <attr format="dimension" name="riv_border_width"/>
    <attr format="color" name="riv_border_color"/>
    <attr format="boolean" name="riv_mutate_background"/>
    <attr format="boolean" name="riv_oval"/>
    <attr name="android:scaleType"/>
    <attr name="riv_tile_mode">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
    <attr name="riv_tile_mode_x">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
    <attr name="riv_tile_mode_y">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
  </declare-styleable>



  <declare-styleable name="LoopView">
    <attr format="color" name="lineColor"/>
    <attr format="color" name="topBottomTextColor"/>
    <attr format="color" name="centerTextColor"/>
    <attr format="dimension" name="textSize"/>
    <attr format="boolean" name="canLoop"/>
    <attr format="integer" name="initPosition"/>
    <attr format="integer" name="drawItemCount"/>
  </declare-styleable>

  <declare-styleable name="MarqueeViewStyle">
    <attr format="integer|reference" name="mvInterval"/>
    <attr format="integer|reference" name="mvAnimDuration"/>
    <attr format="dimension|reference" name="mvTextSize"/>
    <attr format="color|reference" name="mvTextColor"/>
    <attr format="boolean" name="mvSingleLine"/>
    <attr format="dimension|reference" name="mvSpaceExtra"/>
    <attr format="dimension|reference" name="mvSpaceMultiplier"/>
    <attr name="mvGravity">
      <enum name="left" value="0"/>
      <enum name="center" value="1"/>
      <enum name="right" value="2"/>
    </attr>
    <attr name="mvDirection">
      <enum name="bottom_to_top" value="0"/>
      <enum name="top_to_bottom" value="1"/>
      <enum name="right_to_left" value="2"/>
      <enum name="left_to_right" value="3"/>
    </attr>
  </declare-styleable>


  <declare-styleable name="SpannedGridLayoutManager">
    <attr name="android:orientation"/>
    <attr name="spanCount"/>
    <attr format="string" name="aspectRatio"/>
  </declare-styleable>
  <item name="custom_match_parent" type="dimen">-1</item>
  <item name="custom_wrap_content" type="dimen">-2</item>

  <declare-styleable name="DashView">
    <attr format="dimension" name="dashWidth"/>
    <attr format="dimension" name="dashLineWidth"/>
    <attr format="dimension" name="dashLineHeight"/>
    <attr format="color" name="dashLineColor"/>
    <attr format="integer" name="dashOrientation"/>

  </declare-styleable>

</resources>