<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CommonAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/minorText</item>
    </style>
    <!--Toolbar的Theme的设置，都是针对popup的设置-->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/design_white</item><!--设置背景颜色的-->
        <item name="android:textColorPrimary">@color/majorText</item><!--设置文字颜色的-->
        <item name="android:textSize">@dimen/majorText</item><!--设置文字大小的-->
    </style>

</resources>
