<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.saniou.santieba.vo.CommentVoiceItem" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@{item.first?@dimen/default_margin_normal:@dimen/comment_start}"
        android:paddingTop="@dimen/default_margin_normal"
        android:paddingEnd="@dimen/default_margin_normal"
        android:paddingBottom="@dimen/default_margin_normal">

        <ImageView
            toUrl="@{item.voice}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</layout>
