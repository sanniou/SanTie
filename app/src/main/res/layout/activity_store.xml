<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemClick"
            type="com.sanniou.common.widget.recyclerview.OnItemClickListener" />

        <variable
            name="viewModel"
            type="com.saniou.santieba.viewmodel.StoreViewModel" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".component.StoreActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_background"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/ToolbarTheme"
            app:title="@string/my_store" />

        <com.sanniou.common.widget.swiper.LSwipeRefreshLayout
            android:id="@+id/refresh"
            onRefresh="@{viewModel::init}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                data="@{viewModel.items}"
                dividerHeightDp="@{2}"
                itemClick="@{itemClick}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.sanniou.common.widget.swiper.LSwipeRefreshLayout>
    </LinearLayout>
</layout>
